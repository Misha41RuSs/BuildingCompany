<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="503.0" prefWidth="828.0"
            stylesheets="@../Styles/login.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.db.buildingfirm.Client.MyOrdersController">

    <!-- Левая панель -->
    <Pane layoutX="0" layoutY="0" prefWidth="304.0" prefHeight="503.0" styleClass="left-pane">
        <children>
            <Label layoutX="97" layoutY="22" text="Клиент">
                <font><Font name="Times New Roman Bold" size="37"/></font>
            </Label>
            <ImageView fx:id="clientPhoto"
                       layoutX="108" layoutY="87"
                       fitWidth="88" fitHeight="90">
                <image><Image url="@../Images/Client Management.png"/></image>
            </ImageView>
            <Button fx:id="backButton"
                    layoutX="3" layoutY="435"
                    prefWidth="296" prefHeight="54"
                    style="-fx-background-color: linear-gradient(to bottom, #ff7f7f, #ff4f4f);"
                    styleClass="button"
                    text="Назад"
                    onAction="#goBack"/>
        </children>
    </Pane>

    <!-- Заголовок -->
    <Label layoutX="426" layoutY="25" text="Мои заказы">
        <font><Font name="Times New Roman Bold" size="37"/></font>
    </Label>

    <!-- Таблица заказов -->
    <TableView fx:id="ordersTable"
               layoutX="320" layoutY="80"
               prefWidth="480" prefHeight="350">
        <columns>
            <TableColumn fx:id="colId"      text="ID заказа"      prefWidth="80"/>
            <TableColumn fx:id="colType"    text="Тип дома"       prefWidth="150"/>
            <TableColumn fx:id="colStatus"  text="Статус"          prefWidth="120"/>
            <TableColumn fx:id="colCreated" text="Дата создания"   prefWidth="130"/>
        </columns>
    </TableView>

    <!-- Кнопка подробностей -->
    <Button fx:id="detailsButton"
            layoutX="640" layoutY="445"
            prefWidth="160" prefHeight="36"
            text="Посмотреть детали"
            styleClass="button"
            onAction="#showDetails"
            disable="true"/>
</AnchorPane>
