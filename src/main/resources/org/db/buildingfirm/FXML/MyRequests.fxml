<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../Styles/login.css"
            fx:controller="org.db.buildingfirm.Manager.MyRequestsController">

    <!-- Левая панель -->
    <Pane layoutX="0" layoutY="0" prefWidth="300" prefHeight="600" styleClass="left-pane">
        <children>
            <Label layoutX="60" layoutY="20" text="Менеджер">
                <font><Font size="36" name="Times New Roman Bold"/></font>
            </Label>
            <ImageView layoutX="105" layoutY="80" fitWidth="90" fitHeight="90">
                <image>
                    <Image url="@../Images/Manager.png"/>
                </image>
            </ImageView>
            <Button fx:id="backButton" layoutX="10" layoutY="520"
                    prefWidth="280" prefHeight="50"
                    text="Назад" styleClass="button"
                    onAction="#goBack"/>
        </children>
    </Pane>

    <!-- Правая часть: таблица заявок -->
    <Label layoutX="350" layoutY="20" text="Заявки от клиентов">
        <font><Font size="36" name="Times New Roman Bold"/></font>
    </Label>

    <TableView fx:id="requestsTable" layoutX="320" layoutY="80"
               prefWidth="550" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId"       text="ID заказа"      prefWidth="80"/>
            <TableColumn fx:id="colLogin"    text="Клиент (login)" prefWidth="120"/>
            <TableColumn fx:id="colType"     text="Тип дома"       prefWidth="120"/>
            <TableColumn fx:id="colStatus"   text="Статус"         prefWidth="120"/>
            <TableColumn fx:id="colCreated"  text="Дата создания"  prefWidth="160"/>
        </columns>
    </TableView>

    <Button fx:id="detailsButton" layoutX="680" layoutY="500"
            text="Показать информацию" prefWidth="190" prefHeight="40"
            styleClass="button"
            onAction="#showDetails"
            disable="true"/>
</AnchorPane>
